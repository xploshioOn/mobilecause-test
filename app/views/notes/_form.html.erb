<%= simple_form_for @note do |f| %>
<div class="row">
  <div class="col s12">
    <div class="row">
      <%= f.input :user_id, as: :hidden %>
      <%= f.input :content, wrapper_html: { class: 'col s12 l12' }, input_html: { class: 'materialize-textarea' } %>
    </div>
  </div>
  <div class="actions right-align l12 s12">
    <%= button_tag( :class => "btn waves-effect waves-light red") do %>
      Save
      <i class="material-icons right">send</i>
    <% end %>
  </div>
</div>
<% end %>
